<?xml version="1.0" encoding="utf-8"?>
<com.example.mytestapplication.widge.calendar.MyCalendaryView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/mycalendar"
    tools:context="com.example.mytestapplication.ui.activity.CalendarActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/red"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="66666" />

        <Button
            android:id="@+id/bt_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="open" />

        <Button
            android:id="@+id/bt_closed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="closed" />
    </LinearLayout>
</com.example.mytestapplication.widge.calendar.MyCalendaryView>
