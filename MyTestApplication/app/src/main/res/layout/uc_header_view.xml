    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
        android:gravity="center_horizontal"
        android:text="title_item_2"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_20"
