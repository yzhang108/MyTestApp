<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.activity.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/tv_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎来到我的测试程序!" />
    <Button
        android:id="@+id/bt_openApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_welcome"
        android:text="打开政企项目"/>
    <Button
        android:id="@+id/bt_html5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HTML5测试"
        android:layout_below="@id/bt_openApp"/>
    <Button android:id="@+id/bt_notification"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="创建推送消息"
        android:layout_below="@id/bt_html5"/>
    <Button android:id="@+id/bt_rejected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="反射实验"
        android:layout_below="@id/bt_notification"/>
    <Button android:id="@+id/bt_memory_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内存测试"
        android:layout_below="@id/bt_notification"/>
    <Button android:id="@+id/bt_copy_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拷贝数据库"
        android:layout_below="@id/bt_memory_test"/>
    <Button
        android:id="@+id/bt_test_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="测试TreeMap与HashMap"
        android:layout_below="@id/bt_copy_db"/>

</RelativeLayout>
